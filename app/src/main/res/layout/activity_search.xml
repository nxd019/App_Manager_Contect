<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:textColor="@android:color/black"/>

    <RadioGroup
        android:id="@+id/rgSearchOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/rbSearchEmployee"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:checked="true"
            android:text="Tìm kiếm nhân viên"
            android:textColor="@android:color/black" />

        <RadioButton
            android:id="@+id/rbSearchUnit"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:text="Tìm kiếm đơn vị"
            android:textColor="@android:color/black" />
    </RadioGroup>

    <EditText
        android:id="@+id/etSearchQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập từ khóa tìm kiếm"
        android:layout_marginTop="24dp"
        android:inputType="text"
        android:backgroundTint="#000000"
        android:padding="8dp"/>

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tìm kiếm"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:padding="8dp"/>

    <ListView
        android:id="@+id/lvSearchResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="#000000"/>
</LinearLayout>
